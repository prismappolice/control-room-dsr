# Database Configuration
DATABASE_TYPE=postgresql

# PostgreSQL Connection Details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=control_room_dsr
POSTGRES_USER=dsr_user
POSTGRES_PASSWORD=dsr_pass123

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=production
FLASK_DEBUG=0

# Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=app/uploads

# For Cloud Deployment:
# Update POSTGRES_HOST with your cloud database URL
# Example for Render: postgres://user:password@host.render.com/database
# Example for AWS RDS: your-db.xxxxx.region.rds.amazonaws.com
# Example for DigitalOcean: your-db.xxxxx.db.ondigitalocean.com
